@model IEnumerable<EmpresaModel>
@{
    ViewData["Title"] = "listar";
}

<h1>Listar Empresas</h1>
<br />
<span class="alert @ViewBag.classe">@ViewBag.mensagem</span>

<script>

    function confirmExclusao(id) {
        if (confirm("Tem certeza que deseja excluir essa empresa?")) {

            location.href = "/Empresa/excluir/" + id;

        }
    }
</script>

<a href="~/Empresa/cadastro" class="btn btn-info">
    Novo
</a>
<br />
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Código</th>
            <th scope="col">Razão Social</th>
            <th scope="col">CNPJ</th>
            <th scope="col">Alterar</th>
            <th scope="col">Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.id</th>
                <td>@item.razaosocial</td>
                <td>@item.cnpj</td>
                <td>
                    <a href="~/Empresa/prealterar/@item.id"
                   class="btn btn-primary">
                        Alterar
                    </a>
                </td>
                <td>
                    <a href="#"
                   class="btn btn-primary" onclick="confirmExclusao(@item.id)">
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

