@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <!-- Principal CSS do Bootstrap -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Principal CSS do Bootstrap -->
    <link href="~/css/css" rel="stylesheet">

    <!-- Estilos customizados para esse template -->
    <link href="~/css/blog.css" rel="stylesheet">



</head>
<body>
    <div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark ">
  <a class="navbar-brand text-white" href="#">Siga-nos nas redes sociais</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Alterna navegação">
    <span class="navbar-toggler-icon"></span>
  </button>
        <div class="collapse navbar-collapse my-2, my-lg-0, mr-sm-0 e my-sm-0" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item p-2 bd-highlight">
         <img href="#" class="card-img-center flex-auto d-none d-lg-block" style="width: 30px; height: 30px;" src="~/icons/instagram.png">
      </li>
                <li class="nav-item p-2 bd-highlight">
        <img href="#" class="card-img-center flex-auto d-none d-lg-block" style="width: 30px; height: 30px;" src="~/icons/facebook.png">
      </li>
                <li class="nav-item p-2 bd-highlight">
        <img href="#" class="card-img-center flex-auto d-none d-lg-block" style="width: 30px; height: 30px;" src="~/icons/twitter.png">
      </li>
                <li class="nav-item p-2 bd-highlight">
        <img href="#" class="card-img-center flex-auto d-none d-lg-block" style="width: 30px; height: 30px;" src="~/icons/youtube.png">
      </li>
    </ul>
  </div>
        <img href="#" class="card-img-center" style="width: 20px; height: 20px;" src="~/icons/pino-de-localizacao (1).png">
        <a class="navbar-brand form-inline my-2 my-lg-0 text-white" href="#">Presidente Prudente - SP
            <img href="#" class="card-img-center" style="width: 20px; height: 20px;" src="~/icons/troca (2).png">
        </a>
        <a class="navbar-brand form-inline my-2 my-lg-0 text-danger" href="#">Acessibilidade</a>
</nav>

    <div style="width100%">
        <header class="blog-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    <img class="card-img-center flex-auto d-lg-block img-fluid" style="width: 400px;" src="~/imagens/CinemasCinema cut.png">
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">                   
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Pesquisar" aria-label="Pesquisar">
                        <button class="btn my-2 my-sm-0 bg-white" type="submit"><img src="~/icons/lupa (2).png" style="width: 25px; height: 25px;" /></button>
                    </form>
                    @if (HttpContextAccessor.HttpContext.Session.GetInt32("idLogin") != null)
                    {
                        <p class="font-weight-bold">Bem vindo! @Context.Session.GetString("nomeLogin") </p>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-secondary"  href="~/Login/login" class="btn btn-sm btn-outline-secondary">Login</a>
                    }                
                </div>
            </div>
        </header>

        <div class="pos-f-t">
            <div class="collapse" id="navbarToggleExternalContent">
                <div class="bg-dark p-4">
                    <h5 class="text-white h4">Conteúdo expandido</h5>
                    <span class="text-muted">Expansível, atráves da marca no navbar.</span>
                </div>
            </div>
            <nav class="navbar navbar-dark bg-dark nav d-flex justify-content-between">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Alterna navegação">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="p-2 text-white" href="#">Filmes</a>
                <a class="p-2 text-white" href="#">Programação</a>
                <a class="p-2 text-white" href="#">Promoções</a>
                <a class="p-2 text-white" href="#">Corporativo</a>
                <a class="p-2 text-white" href="#">Contatos</a>
            </nav>
        </div>
      </div>
    <div style="width:100%">
          @RenderBody()
    </div>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Principal JavaScript do Bootstrap
    ================================================== -->
    <!-- Foi colocado no final para a página carregar mais rápido -->

    <script src="~/lib/jquery/dist/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.mask.min.js"></script>

    <script src="~/js/holder.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>